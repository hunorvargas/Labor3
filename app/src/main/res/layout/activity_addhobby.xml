<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddhobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a new Hobby"
            android:textAlignment="center"
            android:textColor="#009688"
            android:layout_marginTop="60dp"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editHobbyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Your new Hobby"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/viewHobbyButton"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_marginTop="80dp"
                android:background="#009688"
                android:text="View Hobbies"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/addHobbyButton"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_marginVertical="80dp"
                android:background="#009688"
                android:text="Add Hobby"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>